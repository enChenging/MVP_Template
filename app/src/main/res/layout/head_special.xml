<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_toolbar_height"
            android:background="#ffffff"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/back2"
                android:layout_width="@dimen/default_toolbar_height"
                android:layout_height="@dimen/default_toolbar_height"
                android:src="@mipmap/toolbar_back" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@drawable/black"
                android:textSize="@dimen/tool_bar_test_view_size" />

            <TextView
                android:id="@+id/tv_right2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:text="关闭"
                android:textColor="@color/black"
                android:textSize="@dimen/default_small_text_size"
                android:visibility="gone" />
        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/tool_bar_splite_line"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <ViewStub
        android:id="@+id/vs_digest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/layout_digest" />

    <com.dl7.tag.TagLayout
        android:id="@+id/tag_layout"
        style="@style/TagLayout.RandomColor.Arc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_download"
        android:padding="10dp"
        app:tag_layout_horizontal_interval="10dp"
        app:tag_layout_press_feedback="true"
        app:tag_layout_vertical_interval="10dp" />
</LinearLayout>